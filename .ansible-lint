---
# .ansible-lint

exclude_paths:
  - files/
  - data/
  - logs/
  - stub_data/
  - collections/
  - .collections/
  - test/
  - venv/
  - .venv/
  - .git/
  - ACT/
  - .github/
  - .avd_vars
  - group_vars/
  - outputs/
  - outputs.bak/
  - playbook_examples/

skip_list:
  - var-naming[pattern]
  - var-naming[no-role-prefix]
  - run-once[task]
  - fqcn[keyword]
